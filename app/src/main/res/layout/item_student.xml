<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white_two"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"


    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iv_student"
            android:layout_width="50dp"
            android:layout_height="50dp"

            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="student image"

                android:scaleType="centerCrop"
                android:src="@drawable/mias_profile_pic" />

        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:contentDescription="student image"
            android:padding="8dp"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Ali Hussain"

            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_student"
            app:layout_constraintTop_toTopOf="@+id/iv_student" />


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_more"
            app:layout_constraintEnd_toEndOf="@+id/iv_phone"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone" />

        <TextView
            android:id="@+id/tv_roll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_blue_light"
            android:fontFamily="@font/roboto_slab"
            android:paddingHorizontal="4dp"
            android:text="Roll No - 01"
            android:textColor="@color/purple_one"
            android:textSize="10sp"
            app:circularflow_radiusInDP="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_student"
            app:layout_constraintStart_toStartOf="@+id/tv_student_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_student_name" />

        <TextView
            android:id="@+id/tv_reg_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_rounded_blue_light"
            android:fontFamily="@font/roboto_slab"
            android:paddingHorizontal="4dp"
            android:text="Reg No - 01"
            android:textColor="@color/purple_one"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_roll_num"
            app:layout_constraintStart_toEndOf="@+id/tv_roll_num"
            app:layout_constraintTop_toTopOf="@+id/tv_roll_num" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
