<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:useDefaultMargins="true"
    android:background="@color/gray_disabled"
    android:padding="2dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="DESC"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="PREV"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="CURR"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="TOTAL"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="%AGE"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_presence_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="PRESENCE"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_presence_prev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:padding="8dp"
        android:text="25"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/tv_presence_curr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="1"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_presence_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="26"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_presence_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="74%"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/tv_absence_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="ABSENSE"
        android:textColor="@android:color/white"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/tv_absence_prev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="6"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_absence_curr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="1"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_absence_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="7"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_absence_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="20%"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1dp"/>


    <TextView
        android:id="@+id/tv_grand_total_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="GRAND"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_grand_total_prev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="33"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_grand_total_curr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="2"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_grand_total_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="35"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="1dp"/>
    <TextView
        android:id="@+id/tv_grand_total_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="100%"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"/>

</GridLayout>