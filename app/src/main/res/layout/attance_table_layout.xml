<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:columnCount="5"
        android:padding="2dp"
        android:useDefaultMargins="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="start"
            android:padding="8dp"
            android:text="ATTENDANCE INFORMATION :"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="DESC"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="PREV"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="CURR"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="TOTAL"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="%AGE"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_presence_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="PRESENCE"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_presence_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="25"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_presence_curr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_presence_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="26"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_presence_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="74%"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_absence_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="ABSENSE"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_absence_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_absence_curr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_absence_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_absence_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="20%"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_grand_total_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="GRAND"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_grand_total_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="33"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_grand_total_curr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_grand_total_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="35"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_grand_total_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="100%"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </GridLayout>

</com.google.android.material.card.MaterialCardView>
