<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/purple_one">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_all_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red_absent"
        android:text="DELETE ALL STUDENTS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="216dp" />

    <com.google.android.material.button.MaterialButton

        android:id="@+id/btn_excel_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:icon="@drawable/ic_excel"
        app:iconPadding="16dp"
        app:iconTint="@color/white_two"
        android:textColor="@color/white_two"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:text="Download Sample Excel"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete_all_students"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>