<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/profile_layout"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:padding="8dp"
        android:visibility="invisible"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/user_profile_card"
            layout="@layout/item_top_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

        <include
            android:id="@+id/date_card"
            layout="@layout/item_top_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

    </GridLayout>


    <GridLayout
        android:id="@+id/dashboard_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dashboard_card_two"
        android:columnCount="2"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="8dp"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        >

        <include
            android:id="@+id/attendance_card"
            layout="@layout/item_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="3" />

        <include
            android:id="@+id/students_card"
            layout="@layout/item_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

    </GridLayout>

    <GridLayout
        android:id="@+id/dashboard_card_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:paddingHorizontal="8dp"
        android:useDefaultMargins="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_card">


        <include
            android:id="@+id/user_card"
            layout="@layout/item_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

        <include
            android:id="@+id/settings_card"
            layout="@layout/item_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="3" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>