<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_roll_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ali Hussain"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_roll_num"
        app:layout_constraintStart_toEndOf="@+id/tv_roll_num"
        app:layout_constraintTop_toTopOf="@+id/tv_roll_num" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/attendance_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"

        app:layout_constraintBottom_toBottomOf="@+id/tv_student_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_student_name" />
</androidx.constraintlayout.widget.ConstraintLayout>