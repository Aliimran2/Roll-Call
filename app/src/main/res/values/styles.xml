<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MyApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_two</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="subtitleTextAppearance">@style/Toolbar.Subtitle</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>