<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RollCall" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/primary</item>
        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>
<!--tint color for toolbar icon-->
        <item name="colorControlNormal">@color/green</item>

    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="Theme.RollCall" parent="Base.Theme.RollCall" />


</resources>