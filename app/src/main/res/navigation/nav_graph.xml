<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.miassolutions.rollcall.ui.fragments.AddStudentFragment"
        android:label="Add New Student"
        tools:layout="@layout/fragment_add_student" >
        <argument
            android:name="student_id"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/studentsFragment"
        tools:layout="@layout/fragment_students"
        android:name="com.miassolutions.rollcall.ui.fragments.StudentsFragment"
        android:label="Students" >
        <action
            android:id="@+id/action_studentsFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment" />
        <action
            android:id="@+id/action_studentsFragment_to_studentDetailFragment"
            app:destination="@id/studentDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/attendanceFragment"
        android:name="com.miassolutions.rollcall.ui.fragments.AttendanceFragment"
        android:label="Attendance"
        tools:layout="@layout/fragment_attendance" >
        <action
            android:id="@+id/action_attendanceFragment_to_datePickerFragment"
            app:destination="@id/datePickerFragment" />
        <argument
            android:name="attendanceMode"
            app:argType="string" />
        <argument
            android:name="selectedDate"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>
    <fragment
        android:id="@+id/statsFragment"
        tools:layout="@layout/fragment_stats"
        android:name="com.miassolutions.rollcall.ui.fragments.StatsFragment"
        android:label="Stats" >
        <action
            android:id="@+id/action_statsFragment_to_attendanceFragment"
            app:destination="@id/attendanceFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.miassolutions.rollcall.ui.fragments.SettingsFragment"
        tools:layout="@layout/fragment_settings"
        android:label="Settings" >
        <action
            android:id="@+id/action_settingsFragment_to_datePickerFragment"
            app:destination="@id/datePickerFragment" />
    </fragment>

    <fragment
        android:id="@+id/studentDetailFragment"
        tools:layout="@layout/fragment_student_detail"
        android:name="com.miassolutions.rollcall.ui.fragments.StudentDetailFragment"
        android:label="{student_name} Detail" >
        <argument
            android:name="id"
            app:argType="string" />
        <argument android:name="student_name" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        tools:layout="@layout/fragment_dashboard"
        android:name="com.miassolutions.rollcall.ui.fragments.DashboardFragment"
        android:label="Dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_studentsFragment"
            app:destination="@id/studentsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_statsFragment"
            app:destination="@id/statsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <dialog
        android:id="@+id/datePickerFragment"
        android:name="com.miassolutions.rollcall.ui.fragments.DatePickerFragment"
        android:label="DatePickerFragment" />
    <dialog
        android:id="@+id/userProfileFragment"
        tools:layout="@layout/fragment_user_profile"
        android:name="com.miassolutions.rollcall.ui.fragments.UserProfileFragment"
        android:label="UserProfileFragment" />
</navigation>